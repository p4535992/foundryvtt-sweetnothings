<div id="sweetNothingsDialogPanel" class="{{#if collapsed}}collapsed{{else}}opened{{/if}}">
    <div class="sweetNothingsDialogToggle">
        <i class="expandIcon fas fa-angle-double-left"></i>
        <i class="collapseIcon fas fa-angle-double-right"></i>
    </div>
    <div class="sweetNothingsHistory">
        <h3>{{localize "SWEETNOTHINGS.WHISPER_HISTORY.Title"}} <img class="sweetNothingsLoading {{#if loading}}sweetNothingsIsLoading{{/if}}" src="/icons/anvil.png" title="{{localize "SWEETNOTHINGS.WHISPER_HISTORY.Loading"}}" /></h3>
        <hr />
        {{#if loading}}
        <p>{{localize "SWEETNOTHINGS.WHISPER_HISTORY.Loading"}}</p>
        {{else}}
        {{#unless history}}
        <p>{{localize "SWEETNOTHINGS.WHISPER_HISTORY.No_Results"}}</p>
        {{else}}
        <ul>
            {{#each history}}
            {{{this}}}
            {{/each}}
        </ul>
        {{/unless}}
        {{/if}}
    </div>
</div>